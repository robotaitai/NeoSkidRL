<mujoco model="omnicar_skid">
  <compiler angle="degree" coordinate="local"/>
  <option timestep="0.02" gravity="0 0 -9.81" iterations="50"/>

  <worldbody>
    <geom name="floor" type="plane" size="20 20 0.1" rgba="0.92 0.92 0.92 1" friction="1.2 0.005 0.0001"/>

    <!-- Robot -->
    <body name="base" pos="0 0 0.08">
      <freejoint/>
      <geom name="chassis" type="box" size="0.1535 0.1235 0.02" rgba="0.12 0.12 0.12 1" density="250"/>

      <!-- Wheels: cylinder axis along Y (left-right), so rotate cylinder 90deg about X -->
      <body name="wheel_fl" pos="0.105 0.101 0.00">
        <joint name="wheel_fl_hinge" type="hinge" axis="0 1 0" damping="0.05" armature="0.01"/>
        <geom name="wheel_fl_geom" type="cylinder" size="0.0485 0.020" euler="90 0 0" rgba="0.2 0.2 0.2 1" density="300" friction="2.0 0.005 0.0001"/>
      </body>

      <body name="wheel_fr" pos="0.105 -0.101 0.00">
        <joint name="wheel_fr_hinge" type="hinge" axis="0 1 0" damping="0.05" armature="0.01"/>
        <geom name="wheel_fr_geom" type="cylinder" size="0.0485 0.020" euler="90 0 0" rgba="0.2 0.2 0.2 1" density="300" friction="2.0 0.005 0.0001"/>
      </body>

      <body name="wheel_rl" pos="-0.105 0.101 0.00">
        <joint name="wheel_rl_hinge" type="hinge" axis="0 1 0" damping="0.05" armature="0.01"/>
        <geom name="wheel_rl_geom" type="cylinder" size="0.0485 0.020" euler="90 0 0" rgba="0.2 0.2 0.2 1" density="300" friction="2.0 0.005 0.0001"/>
      </body>

      <body name="wheel_rr" pos="-0.105 -0.101 0.00">
        <joint name="wheel_rr_hinge" type="hinge" axis="0 1 0" damping="0.05" armature="0.01"/>
        <geom name="wheel_rr_geom" type="cylinder" size="0.0485 0.020" euler="90 0 0" rgba="0.2 0.2 0.2 1" density="300" friction="2.0 0.005 0.0001"/>
      </body>

      <camera name="front" pos="0.15 0 0.12" xyaxes="0 -1 0 0 0 1"/>
      <camera name="track" mode="trackcom" pos="0 -3 1.5" xyaxes="1 0 0 0 1 0"/>
      <camera name="bev" mode="trackcom" pos="0 0 5" xyaxes="1 0 0 0 1 0"/>
    </body>

    <!-- Goal marker: bright green cylinder, clearly visible -->
    <site name="goal" type="cylinder" pos="2 0 0.15" size="0.25 0.3" rgba="0.1 0.95 0.3 0.9"/>

    <!-- Kinematic obstacles (mocap bodies). We'll move/resize them from Python. -->
    <!-- Default placed far away. -->
    <!-- 30 obstacles -->
    <body name="obs_00" mocap="true" pos="100 100 0"><geom name="obs_00_geom" type="box" size="0.3 0.3 0.15" rgba="0.5 0.5 0.55 1"/></body>
    <body name="obs_01" mocap="true" pos="100 100 0"><geom name="obs_01_geom" type="box" size="0.3 0.3 0.15" rgba="0.5 0.5 0.55 1"/></body>
