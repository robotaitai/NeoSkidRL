  <actuator>
    <velocity name="act_fl" joint="wheel_fl_hinge" kv="0.2"/>
    <velocity name="act_fr" joint="wheel_fr_hinge" kv="0.2"/>
    <velocity name="act_rl" joint="wheel_rl_hinge" kv="0.2"/>
